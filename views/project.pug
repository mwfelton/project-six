extends layout.pug

block content

  nav.nav
    a(href='/')
      span &larr;
      |  Back

  article.portfolio-projects
    .inner-wrapper.flex-row-wrap.two-col
      .project-info-box.box

        h1= project.project_name

        p= project.description

      .project-tech-links-box.box
        h6 Technologies
        ul

        each tech in project.technologies

          li= tech

        a.btn-link(href=`${project.live_link}`) Live Demo
        a.btn-link(href=`${project.github_link}`) GitHub Repo

    .project-img-box.box

      img.project-img(src=`${project.image_urls.add_img}`, alt=`${project.image_urls.add_alt}`)
      img.project-img(src=`${project.image_urls.add_img1}`, alt=`${project.image_urls.add_alt1}`)
      img.project-img(src=`${project.image_urls.add_img2}`, alt=`${project.image_urls.add_alt2}`)

    nav.nav
      a(href='/')
        span &larr;
        |  Back
